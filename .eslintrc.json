{
    "env": {
        "es6": true,
        "browser": true,  
        "node": true,
        "mocha":true
    },
    "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["off", "always"],
        "react/react-in-jsx-scope": "off"
    },
    "globals": { "React": "writable"  }
}
